<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebpConverter"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WebpConverter.MainWindow"
        mc:Ignorable="d"
        Title="WebP转换器" Height="350" Width="598" ResizeMode="NoResize">
    <Grid>
        <Rectangle x:Name="rect_dragArea" Fill="#FFF4F4F5" Height="184" Margin="23,80,0,0" Stroke="Black" VerticalAlignment="Top" AllowDrop="True" Drop="Rect_dragArea_Drop" HorizontalAlignment="Left" Width="548"/>
        <Label x:Name="lbl_dragArea" Content="拖放你需要转换的图片文件到此处" Margin="125,154,0,0" VerticalAlignment="Top" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Width="340" Drop="Lbl_dragArea_Drop" AllowDrop="True"/>
        <Label Content="图片路径" HorizontalAlignment="Left" Margin="23,17,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <TextBox x:Name="tb_fileName" HorizontalAlignment="Left" Height="23" Margin="23,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="520" RenderTransformOrigin="0.563,1.24" VerticalContentAlignment="Center"/>
        <Button x:Name="btn_selectFile" Content="..." HorizontalAlignment="Left" Margin="548,47,0,0" VerticalAlignment="Top" Width="23" Height="23" Click="Btn_selectFile_Click"/>
        <Button x:Name="btn_convert" Content="转换" HorizontalAlignment="Left" Margin="484,274,0,0" VerticalAlignment="Top" Width="87" Height="28"/>
        <Label x:Name="lbl_status" Content="状态：" HorizontalAlignment="Left" Height="28" Margin="23,274,0,0" VerticalAlignment="Top" Width="249" Padding="0,5,5,5"/>
        <CheckBox x:Name="cb_autoConvert" Content="自动转换" HorizontalAlignment="Left" Margin="499,20,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cb_outputFormat" HorizontalAlignment="Left" Margin="393,274,0,0" VerticalAlignment="Top" Width="86" Height="28" SelectedIndex="0" Visibility="Hidden">
            <System:String>PNG</System:String>
            <System:String>JPG - 高质量</System:String>
        </ComboBox>
        <Label x:Name="lbl_outputFormat" Content="输出格式" HorizontalAlignment="Left" Margin="330,274,0,0" VerticalAlignment="Top" Height="28" VerticalContentAlignment="Center" Visibility="Hidden"/>

    </Grid>
</Controls:MetroWindow>
